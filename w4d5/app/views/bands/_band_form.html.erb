<% if type == :create %>
  <% action = bands_url %>
<% else %>
  <% action = bands_url(band) %>
<% end %>

<% if flash[:errors] %>
  <ul>
    <% flash[:errors].each do |error| %>
      <li> <%= error %> </li>
    <% end %>
  </ul>
<% end %>
<form class="form" action="<%=action%>" method="post">
  <%= authenticity_token %>
  <% if type == :update %>
    <input type="hidden" name="_method" value="patch">
  <% end %>
  <%= authenticity_token %>
  <label>Band Name:</label>
  <input type="text" name="band[name]" placeholder="AC/DC" value="<%= band.name %>">
  <% submit_text = (type == :create) ? 'Create Band' : 'Edit Band' %>
  <input type="submit" value="<%=submit_text%>">
</form>
